.dropzone
  border-radius 100px
  border 1px dashed $c-black
  overflow hidden
  height 150px
  width 150px
  margin-left auto
  margin-right auto
  position relative
  .dropzone-plus
    position absolute
    width 100%
    height 100%
    text-align center
    background-color $c-black
    opacity 0.2
    padding-top 25%
    color #fff
    font-size 40px
    &:hover
      opacity 0.4


.dropzone-square
  border-radius 0
